% based on https://tex.stackexchange.com/questions/146529/design-a-custom-beamer-theme-from-scratch

\mode<presentation>

\RequirePackage{tikz}
\RequirePackage{textpos}
\makeatletter

% settings
\useinnertheme{hector}
\useoutertheme{hector}
\usecolortheme{hector}
\usefonttheme{serif}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=false]

\mode<all>